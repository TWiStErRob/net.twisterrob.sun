<?xml version="1.0" encoding="utf-8"?>
<resources
	xmlns:tools="http://schemas.android.com/tools"
	tools:ignore="SpUsage">

	<style name="WidgetFont">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:textSize">@dimen/widget_text</item>
		<item name="android:layout_height">@dimen/widget_text</item>
	</style>

	<style name="WidgetFont.Primary">
		<item name="android:textColor">@color/primary</item>
		<item name="android:shadowColor">@color/primary_shadow</item>
	</style>

	<style name="WidgetFont.Secondary">
		<item name="android:textColor">@color/secondary</item>
		<item name="android:shadowColor">@color/secondary_shadow</item>
	</style>

	<style name="WidgetFont.Primary.Small">
		<item name="android:textSize">@dimen/widget_text_small</item>
		<item name="android:layout_height">@dimen/widget_text_small</item>
	</style>

	<style name="WidgetFont.Secondary.Small">
		<item name="android:textSize">@dimen/widget_text_small</item>
		<item name="android:layout_height">@dimen/widget_text_small</item>
	</style>

	<style name="WidgetFont.Primary.Big">
		<item name="android:textSize">@dimen/widget_text_big</item>
		<item name="android:layout_height">@dimen/widget_text_big</item>
	</style>
</resources>