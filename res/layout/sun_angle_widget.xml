<?xml version="1.0" encoding="utf-8"?>
<!-- widget cell on Samsung Galaxy S4: 84dp x 105dp -->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layoutRoot"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/widget_margin"
	android:background="#88eeeebb">
	<RelativeLayout
		android:id="@+id/angle_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true">
		<TextView
			style="@style/WidgetFont.Primary.Big"
			android:id="@+id/angle"
			android:layout_centerHorizontal="true"
			android:shadowColor="#888888"
			android:shadowDx="2"
			android:shadowDy="3"
			android:shadowRadius="5"
			android:text="@string/angle_max" />
		<TextView
			style="@style/WidgetFont.Extra"
			android:id="@+id/angleFraction"
			android:layout_alignBottom="@id/angle"
			android:layout_alignParentRight="true"
			android:text="@string/demo_text_angle_fraction" />
		<TextView
			style="@style/WidgetFont.Extra"
			android:id="@+id/state"
			android:layout_alignTop="@id/angle"
			android:layout_alignParentLeft="true"
			android:text="@string/light_state_twilight_nautical" />
	</RelativeLayout>
	<TextView
		style="@style/WidgetFont.Secondary.Small"
		android:id="@+id/timeUpdated"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/angle_container"
		android:text="@string/time_3_min" />
	<RelativeLayout
		android:id="@+id/threshold_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true">
		<TextView
			style="@style/WidgetFont.Secondary.Big"
			android:id="@+id/threshold"
			android:layout_centerVertical="true"
			android:text="@string/angle_max" />
		<TextView
			style="@style/WidgetFont.Primary.Small"
			android:id="@+id/timeThresholdFrom"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/threshold"
			android:text="@string/time_2_min" />
		<TextView
			style="@style/WidgetFont.Primary.Small"
			android:id="@+id/timeThresholdTo"
			android:layout_below="@id/timeThresholdFrom"
			android:layout_toRightOf="@id/threshold"
			android:text="@string/time_2_max" />
		<TextView
			style="@style/WidgetFont.Secondary.Small"
			android:id="@+id/thresholdRelation"
			android:layout_below="@id/threshold"
			android:text="@string/treshold_relation_above" />
	</RelativeLayout>
</RelativeLayout>
